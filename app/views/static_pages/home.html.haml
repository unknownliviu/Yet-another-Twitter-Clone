- if signed_in?
  .row
    %aside.span4
      %section
        = render 'shared/user_info'
      %section
        = render 'shared/stats'
      %section
        = render 'shared/micropost_form'
    .span8
      %h3 Micropost Feed
      = render 'shared/feed'
- else
  .center.hero-unit
    %h1 Welcome to an app that sure ain't twitter-like!
    %h2
      You may enter here!
    = link_to "Sign in here", signin_path, |
      class: "btn btn-large btn-primary"   
    %h5 Or 
    = link_to "Sign up now!", signup_path, |
      class: "btn btn-large btn-primary"   |

  =# link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/'